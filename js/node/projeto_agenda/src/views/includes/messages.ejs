<% if (errors && errors.length > 0) { %>
  <div class="row">
    <div class="col my-3">
      <div class="alert alert-danger">
        <% errors.forEach(erro => { %>
          <div><%= erro %></div>
        <% }); %>
      </div>
    </div>
  </div>
<% } %>

<% if (success && success.length > 0) { %>
  <div class="row">
    <div class="col my-3">
      <div class="alert alert-success">
        <% success.forEach(erro => { %>
          <div><%= success %></div>
        <% }); %>
      </div>
    </div>
  </div>
<% } %>